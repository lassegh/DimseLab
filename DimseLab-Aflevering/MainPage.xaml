<Page x:Class="DimseLab_Aflevering.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModel="using:DimseLab_Aflevering.ViewModel"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewModel:MenuViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <!--#region TopBar-->
        <Grid Grid.Row="0"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.3*" />
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Rectangle Grid.Column="0"
                       Grid.Row="0"
                       Grid.ColumnSpan="6"
                       Fill="Gray" />
            <Button 
                    Width="140"
                    Height="80"
                    Command="{Binding BrowseButton}"
                    Grid.Column="2"
                    Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Image Source="Assets/browse.png"
                           Grid.Row="0"
                           MaxHeight="20"
                           MinHeight="1"/>
                    <TextBlock Text="Browse"
                               Grid.Row="1"/>
                </Grid>
            </Button>
            <Button Width="140"
                    Height="80"
                    Command="{Binding ManageProjectsButton}"
                    Grid.Column="3"
                    Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Image Source="Assets/myprojects.png"
                           Grid.Row="0"
                           MaxHeight="20"
                           MinHeight="1" />
                    <TextBlock Text="Mine Projekter"
                               Grid.Row="1" />
                </Grid>
            </Button>
            <Button Width="140"
                    Height="80"
                    Command="{Binding UserProfileButton}"
                    Grid.Column="4"
                    Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Image Source="Assets/img_325791.png"
                           Grid.Row="0"
                           MaxHeight="20"
                           MinHeight="1" />
                    <TextBlock Text="Min Profil"
                               Grid.Row="1" />
                </Grid>
            </Button>
            <Button Width="140"
                    Height="80"
                    Command="{Binding AdminButton}"
                    Grid.Column="5"
                    Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Image Source="Assets/Cogwheel-512.png"
                           Grid.Row="0"
                           MaxHeight="20"
                           MinHeight="1" />
                    <TextBlock Text="Admin"
                               Grid.Row="1" />
                </Grid>
            </Button>

            <Rectangle Grid.Column="1"
                       Grid.Row="1"
                       Grid.RowSpan="2"
                       Fill="Gray" />
            <Image Source="Assets/logo.png" 
                   Grid.Column="1"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.RowSpan="2"/>
        </Grid>
        <!--#endregion-->
    </Grid>
</Page>
