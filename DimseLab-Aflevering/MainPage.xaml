<Page x:Class="DimseLab_Aflevering.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewModel="using:DimseLab_Aflevering.ViewModel"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <viewModel:MenuViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <!--#region MenuBar-->
        <Grid Grid.Column="0"
              Grid.Row="0"
              Grid.RowSpan="2"
              BorderThickness="4"
              BorderBrush="Black">
            <Grid Height="auto"
                  Width="auto">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

            </Grid>
        </Grid>
        <!--#endregion-->

        <!--#region TopBar-->
        <Grid Grid.Row="0"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Rectangle Grid.Column="0"
                       Grid.Row="0"
                       Grid.ColumnSpan="3"
                       Fill="LightBlue" />
            <Button Content="Home"
                    Width="140"
                    Height="80"
                    Command="{Binding BrowseButton}"
                    Grid.Column="0"
                    Grid.Row="0" />
            <Button Content="Page 1"
                    Width="140"
                    Height="80"
                    Command="{Binding ManageProjectsButton}"
                    Grid.Column="1"
                    Grid.Row="0" />
            <Button Content="Page 2"
                    Width="140"
                    Height="80"
                    Command="{Binding UserProfileButton}"
                    Grid.Column="2"
                    Grid.Row="0" />

            <Rectangle Grid.Column="1"
                       Grid.Row="1"
                       Grid.RowSpan="2"
                       Fill="LightBlue" />
        </Grid>
        <!--#endregion-->
    </Grid>
</Page>
